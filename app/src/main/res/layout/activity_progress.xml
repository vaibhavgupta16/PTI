<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    tools:context="com.example.vaibhav.pti.dashboardClasses.Progress">

    <Spinner
        android:id="@+id/testspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"></Spinner>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/progressrecy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/testspinner"
        android:paddingTop="16dp"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
